<Application x:Class="RegionSyd.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RegionSyd"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             Startup="InitializeApp">
    <Application.Resources>
        <sys:Double x:Key="TextboxHeight">40</sys:Double>
        <!-- Statically defined height for textboxes, allows more consistent style throughout application. -->

        <Thickness x:Key="DefaultMargin">20</Thickness>
        <Thickness x:Key="SmallMargin">5</Thickness>


        <!--<Style TargetType="ComboBox">
            <Setter Property="Margin" Value="{StaticResource SmallMargin}"/>
            
        </Style>-->

        <Style TargetType="Button">
            <Setter Property="Padding" Value="{StaticResource SmallMargin}"/>
            <!--<Setter Property="Margin" Value="{StaticResource SmallMargin}"/>-->
        </Style>

        
        <!-- Probably use this in future projects, too late to properly implement as of now -->
        <!--<Style TargetType="{x:Type ListBoxItem}">
            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
        </Style>-->

    </Application.Resources>
</Application>
